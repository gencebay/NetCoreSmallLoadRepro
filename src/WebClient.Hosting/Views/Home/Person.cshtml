@{
    ViewData["Title"] = "Person";
    var message = ViewBag.Result != null ? (string)ViewBag.Result : "";
    var action = "person";
}

@model SampleModel
<br />
<div>
    <form asp-action="@(action)" asp-controller="home">
        <input type="hidden" id="Id" name="Id" value="@(Model.Id)" />
        <div class="form-group">
            <label for="">Name</label>
            @Html.TextBoxFor(x => x.Name, new { placeholder = "Name", @class= "form-control" })            
        </div>
        <div class="form-group">
            <label for="">Surname</label>
            @Html.TextBoxFor(x => x.Surname, new { placeholder = "Surname", @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <br />
    @message
</div>